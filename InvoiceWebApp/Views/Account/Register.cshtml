@model InvoiceWebApp.ViewModels.RegisterViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Register"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-center mb-4">@Localizer["Register"]</h2>

            <form asp-action="Register" method="post" class="border rounded p-4 shadow">

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">@Localizer["FullName"]</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">@Localizer["Username"]</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">@Localizer["Phone"]</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">@Localizer["Register"]</button>
                <div class="mt-3 text-center">
                    <a asp-action="Login">@Localizer["AlreadyHaveAccount"]</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
